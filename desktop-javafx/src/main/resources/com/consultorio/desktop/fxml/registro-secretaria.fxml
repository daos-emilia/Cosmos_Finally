<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.consultorio.desktop.controllers.RegistroSecretariaController"
      spacing="20" styleClass="ficha-paciente-container">

    <padding>
        <Insets top="20" right="30" bottom="20" left="30"/>
    </padding>

    <!-- TÍTULO -->
    <HBox alignment="CENTER_LEFT">
        <Label text="Registro de Secretaria" styleClass="dashboard-title">
            <font>
                <Font size="28"/>
            </font>
        </Label>
    </HBox>

    <!-- CONTENIDO PRINCIPAL -->
    <ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS" style="-fx-background-color: transparent; -fx-background: transparent;">
        <VBox spacing="20" alignment="TOP_CENTER" style="-fx-background-color: transparent;">

            <!-- Campos centrados directamente sobre el fondo -->
            <VBox spacing="15" alignment="TOP_CENTER" maxWidth="500" style="-fx-background-color: transparent;">
                <VBox spacing="10">
                    <Label text="Nombre *" style="-fx-font-size: 14px; -fx-text-fill: #2C3E50;"/>
                    <TextField fx:id="nombreField" promptText="Ej: María" styleClass="cosmos-text-field"/>
                </VBox>

                <VBox spacing="10">
                    <Label text="Apellido *" style="-fx-font-size: 14px; -fx-text-fill: #2C3E50;"/>
                    <TextField fx:id="apellidoField" promptText="Ej: González" styleClass="cosmos-text-field"/>
                </VBox>

                <VBox spacing="10">
                    <Label text="DNI (será su usuario) *" style="-fx-font-size: 14px; -fx-text-fill: #2C3E50;"/>
                    <TextField fx:id="dniField" promptText="Ej: 12345678" styleClass="cosmos-text-field"/>
                </VBox>

                <VBox spacing="10">
                    <Label text="Teléfono *" style="-fx-font-size: 14px; -fx-text-fill: #2C3E50;"/>
                    <TextField fx:id="telefonoField" promptText="Ej: 1123456789" styleClass="cosmos-text-field"/>
                </VBox>

                <VBox spacing="10">
                    <Label text="Correo Electrónico *" style="-fx-font-size: 14px; -fx-text-fill: #2C3E50;"/>
                    <TextField fx:id="emailField" promptText="Ej: maria@ejemplo.com" styleClass="cosmos-text-field"/>
                </VBox>

                <VBox spacing="10">
                    <Label text="Contraseña *" style="-fx-font-size: 14px; -fx-text-fill: #2C3E50;"/>
                    <TextField fx:id="passwordField" promptText="Mínimo 4 caracteres" styleClass="cosmos-text-field"/>
                </VBox>
            </VBox>

        </VBox>
    </ScrollPane>

    <!-- BOTONES -->
    <HBox spacing="15" alignment="CENTER">
        <Button fx:id="btnGuardar" text="Registrar" onAction="#handleRegistro" styleClass="cosmos-button"
                prefWidth="150" minWidth="150"/>
        <Button text="Cancelar" onAction="#handleCancelar" styleClass="cosmos-button"
                prefWidth="150" minWidth="150"/>
    </HBox>

</VBox>
