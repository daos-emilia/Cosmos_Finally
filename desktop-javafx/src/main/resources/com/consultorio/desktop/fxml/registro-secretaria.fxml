<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>

<VBox alignment="TOP_CENTER" spacing="15.0" xmlns="http://javafx.com/javafx/11.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.consultorio.desktop.controllers.RegistroSecretariaController"
      styleClass="cosmos-container"
      prefWidth="450" prefHeight="580"
      minWidth="450" minHeight="580"
      maxWidth="450" maxHeight="580">

    <Label text="Registro de Secretaria" styleClass="cosmos-title-main"/>
    <Label text="Complete con los datos solicitados" style="-fx-text-fill: #666; -fx-font-size: 13;"/>

    <VBox spacing="15" alignment="CENTER" VBox.vgrow="ALWAYS">
        <TextField fx:id="dniField" promptText="DNI *" styleClass="cosmos-text-field"
                   prefWidth="350" maxWidth="350"/>
        <TextField fx:id="nombreField" promptText="Nombre *" styleClass="cosmos-text-field"
                   prefWidth="350" maxWidth="350"/>
        <TextField fx:id="apellidoField" promptText="Apellido *" styleClass="cosmos-text-field"
                   prefWidth="350" maxWidth="350"/>
        <TextField fx:id="telefonoField" promptText="Teléfono *" styleClass="cosmos-text-field"
                   prefWidth="350" maxWidth="350"/>
        <TextField fx:id="emailField" promptText="Email *" styleClass="cosmos-text-field"
                   prefWidth="350" maxWidth="350"/>
        <TextField fx:id="passwordField" promptText="Contraseña *" styleClass="cosmos-text-field"
                   prefWidth="350" maxWidth="350"/>
    </VBox>

    <VBox spacing="10" alignment="CENTER">
        <Label text="* Campos obligatorios" style="-fx-text-fill: #666; -fx-font-size: 11; -fx-font-style: italic;"/>
        <HBox spacing="20" alignment="CENTER">
            <Button text="Registrar" onAction="#handleRegistro" styleClass="cosmos-button"
                    prefWidth="140" minWidth="140"/>
            <Button text="Cancelar" onAction="#handleCancelar" styleClass="cosmos-button"
                    prefWidth="140" minWidth="140"/>
        </HBox>
    </VBox>

    <padding>
        <Insets bottom="25.0" left="25.0" right="25.0" top="25.0"/>
    </padding>
</VBox>
